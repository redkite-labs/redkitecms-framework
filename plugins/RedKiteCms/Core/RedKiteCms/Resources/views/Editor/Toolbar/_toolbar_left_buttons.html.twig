<a class="btn btn-default" data-bind="click: openImagesSelector, visible: toolbar.indexOf('image-button') != -1" href="#">
    <i class="fa fa-image"></i>
</a>
<a class="btn btn-default" data-bind="click: insertIcon, visible: toolbar.indexOf('icon-button') != -1" href="#">
    <i class="fa fa-cube"></i>
</a>
<a class="btn btn-default" data-bind="click: insertIconLinked, visible: toolbar.indexOf('icon-linked-button') != -1" href="#">
    <i class="fa fa-bolt"></i>
</a>
<a class="btn btn-default" data-bind="click: insertIconStacked, visible: toolbar.indexOf('icon-stacked-button') != -1" href="#">
    <i class="fa fa-cubes"></i>
</a>
<a class="btn btn-default" data-bind="click: insertLink, visible: toolbar.indexOf('link-button') != -1" href="#">
    <i class="fa fa-link"></i>
</a>
<div data-bind="visible: toolbar.indexOf('permalinks') != -1" class="pull-left">
    <select class="form-control rkcms-pages-selector" data-bind="event: { change: insertPermalink }">
        <option value=""> </option>
        {% for permalink in app["red_kite_cms.pages_collection_parser"].permalinksByLanguage() %}
            <option value="{{ permalink }}">{{ permalink }}</option>
        {% endfor %}
    </select>
</div>